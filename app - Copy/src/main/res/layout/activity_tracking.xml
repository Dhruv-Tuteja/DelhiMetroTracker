<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E27">

    <!-- Subtle Top Gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_top"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#1A1F3A"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Current Station Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT LOCATION"
                android:textColor="#6B7BA8"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:layout_marginBottom="8dp"/>

            <!-- Current Station Name -->
            <TextView
                android:id="@+id/tvCurrentStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp"
                tools:text="Huda City Centre" />

            <!-- Progress Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="#64B5F6"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Journey Progress"
                    android:textColor="#8A94B8"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30%"
                    android:textColor="#64B5F6"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Progress Bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/journeyProgress"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:trackColor="#0F1429"
                app:indicatorColor="#4CAF50"
                app:trackCornerRadius="4dp"
                android:progress="30"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Station List Title -->
    <TextView
        android:id="@+id/tvRouteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Route"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerCard"/>

    <!-- Station Path RecyclerView -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pathCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#1A1F3A"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvRouteTitle"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStationPath"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideOverlay"/>

    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:baselineAligned="true">

        <!-- Manual Update Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManualUpdate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Update Station"
            android:textAllCaps="false"
            android:textColor="#64B5F6"
            android:textSize="15sp"
            android:textStyle="bold"
            app:strokeColor="#64B5F6"
            app:strokeWidth="2dp"
            app:cornerRadius="16dp"
            android:minHeight="56dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:gravity="center"/>

        <!-- Stop Journey Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStopJourney"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="End Trip"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:minHeight="56dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="#FF5252"
            app:cornerRadius="16dp"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>