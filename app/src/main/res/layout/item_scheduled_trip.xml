<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scheduledTripCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Line Color Indicator Strip -->
        <View
            android:id="@+id/viewLineIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Scheduled Time -->
        <TextView
            android:id="@+id/tvScheduledTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="9:00 AM"
            android:textColor="?attr/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewLineIndicator"
            app:layout_constraintEnd_toStartOf="@id/tvScheduleType"
            tools:ignore="HardcodedText" />

        <!-- Schedule Type (Recurring Days) -->
        <TextView
            android:id="@+id/tvScheduleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MON-FRI"
            android:textColor="@color/metro_green"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/tvScheduledTime"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <!-- Route -->
        <TextView
            android:id="@+id/tvScheduledRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="Dwarka Sector 21 → Rajiv Chowk"
            android:textColor="?attr/colorOnSurface"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/tvScheduledTime"
            app:layout_constraintStart_toEndOf="@id/viewLineIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <!-- Reminder Info -->
        <TextView
            android:id="@+id/tvReminderInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="⏰ 30 min before"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/tvScheduledRoute"
            app:layout_constraintStart_toEndOf="@id/viewLineIndicator"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>