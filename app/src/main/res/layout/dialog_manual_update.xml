<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2C2C2C">

    <!-- Custom Title Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manual Station Update"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:background="#2C2C2C"/>

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/dialog_background">

        <!-- Station Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/which_station_reached"
            android:textSize="13sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerStation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/station_spinner_description"/>

        <!-- Time Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/when_arrived"
            android:textSize="13sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/time_spinner_description"/>

        <!-- Info Message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/info_background"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="#64B5F6"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/info_icon"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/manual_update_info"
                android:textSize="11sp"
                android:textColor="#90A4AE"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Custom Button Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#2C2C2C">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelDialog"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:strokeColor="#64B5F6"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateDialog"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="UPDATE"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:backgroundTint="#64B5F6"
            app:cornerRadius="12dp"/>
    </LinearLayout>

</LinearLayout>