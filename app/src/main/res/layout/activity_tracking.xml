<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- SOS OVERLAY -->
    <FrameLayout
        android:id="@+id/sosOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/accent_red"
        android:elevation="20dp">

        <TextView
            android:id="@+id/tvSosCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SENDING SOS IN 5"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Double tap to cancel"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="100dp"/>
    </FrameLayout>

    <!-- HEADER CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- LABEL + SOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvCurrentStationLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EST. TIME: ~2 mins left"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSOS"
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    android:text="SOS"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/accent_red"
                    app:cornerRadius="18dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>
            </LinearLayout>

            <!-- STATION + SPEED INLINE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvCurrentStation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02"
                    tools:text="Dwarka Mor"/>

                <!-- Speed Indicator -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tvSpeedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" km/h"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginStart="2dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- NEXT TRAIN SCHEDULE -->
            <TextView
                android:id="@+id/tvNextTrainSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColor="@color/accent_warning"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Next Train: 10:15 AM"/>

            <!-- PROGRESS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="?attr/colorPrimary"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Journey Progress"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/2 stations"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/journeyProgress"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:trackColor="?attr/colorSurfaceContainer"
                app:indicatorColor="@color/accent_green"
                app:trackCornerRadius="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ROUTE -->
    <TextView
        android:id="@+id/tvRouteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Route"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pathCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvRouteTitle"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">

        <!-- CHANGED: Use AutoCenterRecyclerView instead of RecyclerView -->
        <com.metro.delhimetrotracker.AutoCenterRecyclerView
            android:id="@+id/rvStationPath"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- BOTTOM BUTTONS -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManualUpdate"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Update Station"
            android:textColor="?attr/colorPrimary"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="2dp"
            app:cornerRadius="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStopJourney"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="End Trip"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/accent_red"
            app:cornerRadius="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>