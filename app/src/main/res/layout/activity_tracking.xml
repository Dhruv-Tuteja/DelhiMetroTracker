<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E27">

    <!-- SOS OVERLAY -->
    <FrameLayout
        android:id="@+id/sosOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp">

        <TextView
            android:id="@+id/tvSosCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SENDING SOS IN 5"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Double tap to cancel"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="100dp"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_top"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- HEADER CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#1A1F3A"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- LABEL + SOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvCurrentStationLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EST. TIME: ~2 mins left"
                    android:textColor="#6B7BA8"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSOS"
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    android:text="SOS"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/holo_red_dark"
                    app:cornerRadius="18dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>
            </LinearLayout>

            <!-- STATION + SPEED INLINE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvCurrentStation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02"
                    tools:text="Dwarka Mor"/>

                <LinearLayout
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/speed_indicator_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:id="@+id/tvSpeedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#64B5F6" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" km/h"
                        android:textSize="10sp"
                        android:textColor="#6B7BA8"
                        android:layout_marginStart="2dp"/>

                </LinearLayout>
            </LinearLayout>
            <!-- NEXT TRAIN SCHEDULE - NEW ADDITION -->
            <TextView
                android:id="@+id/tvNextTrainSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColor="#FFC107"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Next Train: 10:15 AM"/>

            <!-- PROGRESS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="#64B5F6"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Journey Progress"
                    android:textColor="#8A94B8"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/2 stations"
                    android:textColor="#64B5F6"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/journeyProgress"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:trackColor="#0F1429"
                app:indicatorColor="#4CAF50"
                app:trackCornerRadius="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ROUTE -->
    <TextView
        android:id="@+id/tvRouteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Route"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pathCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvRouteTitle"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:cardBackgroundColor="#1A1F3A"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStationPath"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- BOTTOM BUTTONS -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManualUpdate"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Update Station"
            android:textColor="#64B5F6"
            app:strokeColor="#64B5F6"
            app:strokeWidth="2dp"
            app:cornerRadius="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStopJourney"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="End Trip"
            android:textColor="@android:color/white"
            app:backgroundTint="#FF5252"
            app:cornerRadius="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
