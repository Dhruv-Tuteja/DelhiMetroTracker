<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="@string/plan_your_journey"
        app:titleCentered="true"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnPrimary" />

    <!-- Recharge Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRechargeCard"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recharge Metro Card"
        android:textColor="?attr/colorPrimary"
        app:icon="@android:drawable/ic_menu_send"
        app:iconTint="?attr/colorPrimary"
        android:layout_marginTop="8dp"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Source Station Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Starting Station"
                        app:boxBackgroundColor="?attr/colorSurface"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:hintTextColor="?attr/colorPrimary"
                        app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                        app:startIconTint="?attr/colorPrimary">

                        <AutoCompleteTextView
                            android:id="@+id/sourceAutoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Swap Button Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginVertical="8dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="?attr/colorOutlineVariant"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSwapStations"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="8dp"
                            app:icon="@drawable/ic_swap_stations"
                            app:iconTint="?attr/colorPrimary"
                            app:iconSize="24dp"
                            android:contentDescription="Swap stations" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="?attr/colorOutlineVariant"/>
                    </LinearLayout>

                    <!-- Destination Station Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Destination Station"
                        app:boxBackgroundColor="?attr/colorSurface"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:hintTextColor="?attr/colorPrimary"
                        app:startIconDrawable="@android:drawable/ic_menu_compass"
                        app:startIconTint="?attr/colorPrimary">

                        <AutoCompleteTextView
                            android:id="@+id/destinationAutoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginVertical="12dp"/>

                    <!-- Route Preference Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ROUTE PREFERENCE"
                        android:textSize="10sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/routePreferenceGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <RadioButton
                            android:id="@+id/rbShortestPath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fastest Route"
                            android:textColor="?attr/colorOnSurface"
                            android:buttonTint="?attr/colorPrimary"
                            android:checked="true"
                            android:layout_marginEnd="16dp"/>

                        <RadioButton
                            android:id="@+id/rbLeastInterchanges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Least Changes"
                            android:textColor="?attr/colorOnSurface"
                            android:buttonTint="?attr/colorPrimary"/>
                    </RadioGroup>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginVertical="12dp"/>

                    <!-- Schedule Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_notification"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Schedule for later"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchSchedule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Schedule Options (Hidden by default) -->
                    <LinearLayout
                        android:id="@+id/layoutScheduleOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="16dp">

                        <!-- Time Selector -->
                        <TextView
                            android:id="@+id/tvSelectTime"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_glow_circle"
                            android:backgroundTint="?attr/colorSurface"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:text="Select Time"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginBottom="12dp"/>

                        <!-- Frequency Radio Group -->
                        <RadioGroup
                            android:id="@+id/radioGroupFrequency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioOneTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="One Time"
                                android:textColor="?attr/colorOnSurface"
                                android:buttonTint="?attr/colorPrimary"
                                android:checked="true"
                                android:layout_marginEnd="16dp"/>

                            <RadioButton
                                android:id="@+id/radioRecurring"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recurring"
                                android:textColor="?attr/colorOnSurface"
                                android:buttonTint="?attr/colorPrimary"/>
                        </RadioGroup>

                        <!-- Days Selection (Hidden by default) -->
                        <LinearLayout
                            android:id="@+id/layoutDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/checkMon"
                                    android:text="Mon"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                                <CheckBox
                                    android:id="@+id/checkTue"
                                    android:text="Tue"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                                <CheckBox
                                    android:id="@+id/checkWed"
                                    android:text="Wed"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                                <CheckBox
                                    android:id="@+id/checkThu"
                                    android:text="Thu"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:id="@+id/checkFri"
                                    android:text="Fri"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                                <CheckBox
                                    android:id="@+id/checkSat"
                                    android:text="Sat"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                                <CheckBox
                                    android:id="@+id/checkSun"
                                    android:text="Sun"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/colorSurface">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="?attr/colorOnSurface"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:strokeColor="?attr/colorPrimary"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="START"
            android:textColor="?attr/colorOnPrimary"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="12dp"/>
    </LinearLayout>

</LinearLayout>