<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Light Theme -->
    <style name="Theme.DelhiMetroTracker" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/metro_blue</item>
        <item name="colorPrimaryVariant">@color/metro_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background_surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorSurfaceVariant">@color/background_card_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
        <item name="colorOutlineVariant">@color/divider_color_light</item>
        <item name="android:statusBarColor">@color/metro_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>

    </style>

    <style name="Theme.DelhiMetroTracker.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/metro_blue</item>
        <item name="android:statusBarColor">@color/metro_blue</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>

    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>

    </style>
</resources>